{
  "name": "qotd-svc",
  "version": "0.1.1",
  "description": "Service for QOTD",
  "keywords": [],
  "author": "Ricardo Casares <ricardocasares@gmail.com> (http://analogic.al/)",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run watch & npm run tscw & npm run tdd",
    "tscw": "tsc -w",
    "build": "tsc",
    "start": "micro",
    "test": "jest",
    "test:ci": "jest --ci",
    "tdd": "jest --watch",
    "watch": "nodemon -w dist --exec \"npm start\"",
    "commit": "npx git-cz",
    "format": "prettier --write **/*.ts"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/micro": "^7.3.3",
    "@types/node": "^10.12.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.5",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "micro": "^9.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
